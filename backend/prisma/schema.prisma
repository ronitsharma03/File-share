generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusType {
  pending
  active
  expired
  completed
}

enum TransferType {
  webrtc
  s3
}

model FileData {
  id String @id @default(uuid())
  fileName String
  fileSize BigInt
  transferType TransferType
  s3Key String?
  downloadUrl String?
  roomId String @unique
  senderEmail String?
  receiverEmail String?
  status StatusType @default(pending)
  createdAt DateTime @default(now())
  expiresAt DateTime
  isDeleted Boolean @default(false)

  @@index([status])
  @@index([expiresAt])
}

